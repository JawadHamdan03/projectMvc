@model List<Category>

<div class="container mt-4">
    <h1 class="mb-4">Categories</h1>


<a class="btn btn-primary" asp-area="Admin" asp-controller="Categories" asp-action="Create">Add a new Category</a>
    <table class="table table-hover table-bordered table-striped shadow-sm">
        <thead class="table-primary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a class="btn btn-danger" asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" >Delete</a>
                        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
